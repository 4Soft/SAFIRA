<section class="panel">
  <header class="panel__header">
      <span class="hide-mobile">
          <h2><%= @selection_process.full_name %></h2>
      </span>
  </header>

  <% @selection_process.process_steps.order(&:order_number).each do |step| %>
    <div style="background: #ccc">
      <h3><%= step.name %></h3>

      <p><%= truncate(step.description, length: 80) %></p>

      <ul>
        <% step.candidates.each do |cand| %>
          <li><%= link_to "#{cand.name}: #{cand.email}", [@selection_process, cand] %></li>
        <% end %>
      </ul>
      <%= link_to "Gerenciar etapa", [@selection_process, step] %>
    </div>
  <% end %>
  
  <% if @selection_process.consolidated? %>
    <p>Processo consolidado em <%= @selection_process.consolidated_at %></p>
  <% else %>
    <%= link_to "Consolidar processo seletivo", selection_process_consolidate_path(@selection_process), method: :post %>
  <% end %>

  <hr/>
  <h3 style="margin-left:20px">Adicionar etapa</h3><br>
  <%= render 'process_steps/form' %>
</section>
