<div class="panel">
<%= form_for(@selection_process_form, url: selection_processes_path, :html => { :class => "form"}) do |f| %>
  <%= f.label "Nome" %> 
  <%= f.text_field :selection_process_name %>

  <%= f.label "Chamada" %>
  <%= f.text_area :selection_process_call %><br/>

  <%= f.label "Edital" %>
  <%= f.file_field :selection_process_edict %><br/>

  <div class="row">
    <div class="opening">
      <%= f.label "Data de abertura das inscrições" %>
      <%= f.datetime_select :inscription_open_date, 'data-behaviour' => 'datepicker' %>
    </div>

    <div class="closing">
      <%= f.label "Data de fechamento das inscrições" %>
      <%= f.datetime_select :inscription_close_date %>
    </div>
  </div>
</div>
<br>
<div class="pull-right">
  <%= f.submit "Criar Processo", :class=> "button-primary-inline" %>
</div>
<% end %>
