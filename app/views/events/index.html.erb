<section class="panel">
  <header class="panel__header">
    <span class="hide-mobile">
      <h2>Eventos</h2>
    </span>
    <div class="pull-right">
      <%= link_to "+ CRIAR EVENTO", new_event_path, :class => "btn--success" %>
    </div>
  </header>

  <table class="table">
    <tbody>
      <% if @events.each do |ev| %>
        <tr>
          <td>
            <%= link_to ev.name, ev, :class => "table__data-title" %>
          </td>
            <td class="hide-mobile">
              <span class="table__label">
                <strong>INÍCIO</strong><br>
                 <%= "#{ev.initial_date.strftime("%d/%m/%y")}" %>
                 <%= "#{ev.initial_date.strftime("às %I:%M%p")}" %>
              </span>
            </td>
            <td>
              <span class="table__label">
                <strong>FIM</strong><br>
                 <%= "#{ev.final_date.strftime("%d/%m/%y")}" %>
                 <%= "#{ev.final_date.strftime("às %I:%M%p")}" %>
              </span>
            </td>
          </td>
          <td>
            <div class="pull-right">
              <% if ev.presences %>
              <%= link_to "PRESENÇAS", show_presences(@ev), :class => "btn btn--small"%>
              <% end %>
            </div>
          </td> 
        </tr>
      <% end.empty? %>
        <tr>
          <td>
            <p>Não há nenhum <strong>Evento</strong> cadastrado até o momento.</p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
