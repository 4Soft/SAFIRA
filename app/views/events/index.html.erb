<section class="panel">
  <header class="panel__header">
    <span class="hide-mobile">
      <h2>Eventos</h2>
    </span>
    <div class="pull-right">
      <%= link_to "+ CRIAR EVENTO", new_event_path, :class => "btn--success" %>
    </div>
  </header>

  <table class="table">
    <tbody>
      <% if @events.each do |ev| %>
        <tr>
          <td>
            <%= link_to ev.name, ev, :class => "table__data-title" %>
          </td>
          <td class="hide-mobile">
            <span class="table__label">
              <strong>INÍCIO</strong><br>
               <%= "#{ev.date.strftime("%d/%m/%y")}" %>
               <%= "#{ev.date.strftime("às %I:%M%p")}" %>
            </span>
          </td>
      <% end.empty? %>
        <tr>
          <td>
            <p>Não há nenhum <strong>Evento</strong> cadastrado até o momento.</p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
