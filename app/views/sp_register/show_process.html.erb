<section class="panel">
  <header class="panel__header">
    <span class="hide-mobile">
      <h2><%= @selection_process.full_name %></h2>
      <p><%= @selection_process.call %></p>
    </span>
  </header>

  <div class="panel">
    <%= link_to "Ler Edital", @selection_process.edict.url %>
    
    <%= form_for(:candidate, url: selection_process_register_candidate_url(@selection_process)) do |f| %>
      <%= f.label "Nome completo" %>
      <%= f.text_field :name %><br/>

      <%= f.label "E-mail" %>
      <%= f.email_field :email %><br/>

      <%= f.label "Curso" %>
      <%= f.text_field :course %><br/>

      <%= f.label "Escreva sobre você" %>
      <%= f.text_area :description %><br/>

      <%= f.label "Currículo" %>
      <%= f.file_field :curriculum %><br/>

      <div class="form-actions">
        <%= f.submit "Inscreva-se", :class => "btn--success" %>
      </div>
    <% end %>
  </div>
</section>


