<section class="sign-in">
	<header class="header">
		<h1>Acesso ao sistema</h1>
	</header>

	<div class="body">	
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, :placeholder => "Email", :required => false, :autofocus => true, :label => false, :input_html => { :autocomplete => "off" } %>
		    <%= f.input :password, :placeholder => "Senha", :required => false, :label => false, input_html: { :autocomplete => "off" } %>
		    <div class="sign-in__forgot-password">
		    	<%= link_to "Esqueceu a senha?", new_user_password_path %>
		    </div>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "ENTRAR" %>
		  </div>
		<% end %>
	</div>
</section>